{% extends "baseBack.html.twig" %}

{% block title %}
    Mes albums
{% endblock %}

{% block body %}
    <section class="mb-5">
        <h4>Ajouter des images à un album</h4>
    </section>
    <div class="container no-gutter ">
        <div class="row">
            {% for album in albums %}
                <div class="col-lg-3 mb-5 cover">
                    <a href="{{ path('addAlbumImage', {'id': album.id}) }}">
                        <img alt="Sébastien Mao : {{ album.title }}" class="mini" src="{{ vich_uploader_asset(album, 'coverFile')}}">
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Bootstrap JQuery Plugin -->

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>

<!-- Ajouter plusieurs images -->
<script src="js/albumImage.js"></script>
{% endblock %}
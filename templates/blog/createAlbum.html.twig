{% extends "base.html.twig" %}
{% form_theme formAlbum 'bootstrap_4_layout.html.twig' %}

{% block title %}
    Créer un album
{% endblock %}

{% block body %}
    <h1>Création d'un article</h1>

    {# {{ form(formAlbum)}} #}

    {{ form_start(formAlbum) }}

    {{ form_row(formAlbum.title, {'attr': {'placeholder': "Titre de l'album"}}) }}
    {{ form_row(formAlbum.subtitle, {'attr': {'placeholder': "Sous-titre de l'album"}}) }}
    {{ form_row(formAlbum.scenario, {'attr': {'placeholder': "Scénariste"}}) }}
    {{ form_row(formAlbum.dessin, {'attr': {'placeholder': "Déssinateur"}}) }}
    {{ form_row(formAlbum.Couleur, {'attr': {'placeholder': "Coloriste"}}) }}
    {{ form_row(formAlbum.date) }}
    {{ form_row(formAlbum.buyLink, {'attr': {'placeholder': "Lien Bamboo de vente"}}) }}
    {{ form_row(formAlbum.content, {'attr': {'placeholder': "Texte de présentation"}}) }}
    {{ form_row(formAlbum.cover, {'attr': {'placeholder': "Image de couverture"}}) }}
    {{ form_row(formAlbum.image1, {'attr': {'placeholder': "Image N°1"}}) }}
    {{ form_row(formAlbum.image2, {'attr': {'placeholder': "Image N°2"}}) }}
    {{ form_row(formAlbum.image3, {'attr': {'placeholder': "Image N°3"}}) }}
    {{ form_row(formAlbum.image4, {'attr': {'placeholder': "Image N°4"}}) }}
    {{ form_row(formAlbum.image5, {'attr': {'placeholder': "Image N°5"}}) }}
    {{ form_row(formAlbum.image6, {'attr': {'placeholder': "Image N°6"}}) }}
    {{ form_row(formAlbum.video1, {'attr': {'placeholder': "Video N°1"}}) }}
    {{ form_row(formAlbum.video2, {'attr': {'placeholder': "Video N°2"}}) }}

    <button class="btn btn-primary" type="submit">
        {% if editMode %}
            Modifier
        {% else %}
            Publier
        {% endif %}
    </button>

    {{ form_end(formAlbum) }}

{% endblock %}

{% extends "base.html.twig" %}
{% block title %}
    Album :
    {{ album.title }}
{% endblock %}

{% block body %}
    <div class="container-fluid album">
        <div class="row">
            <div class="col-md-4 coverBig">
                <img alt="{{ album.title }}" class="mini" src="{{ vich_uploader_asset(album, 'coverFile')}}">
            </div>
            <div class="col-md-7 offset-md-1">
                <h4>{{ album.title }}</h4>
                <p class="subTitle pt-3 pb-3">{{ album.Subtitle }}</p>
                <p>Scénario :
                    <span class="bold">
                        {{ album.Scenario }}
                        <span></p>
                        <p>Déssin :
                            <span class="bold">
                                {{ album.Dessin }}
                            </span>
                        </p>
                        <p>Couleur :
                            <span class="bold">
                                {{ album.Couleur }}
                            </span>
                        </p>
                        <p class="dateParution pt-3 pb-3">Paru le :
                            {{ album.date | date('d/m/Y') }}
                        </p>
                        <p class="contenu pb-3">{{ album.content | raw }}</p>
                        <a name="" id="" class="btn btn-primary" href="{{ album.buyLink }}" role="button">Acheter</a>
                    </div>
                </p>
            </div>
            <div
                class="col-md-12 text-center ">{# <img alt="" class="mini" src="{{ album.image1 }}">
                                                                                        <img alt="" class="mini" src="{{ album.image2 }}">
                                                                                        <img alt="" class="mini" src="{{ album.image3 }}"> #}
            </div>
            {% if album.makingOf.content is defined %}
                <div class="col-md-12 text-center ">
                    {{album.makingOf.content}}
                </div>
            {% endif %}
        </div>

    {% endblock %}

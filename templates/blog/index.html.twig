{% extends 'base.html.twig' %}

{% block title %}Sébastien Mao auteur de Bande déssinée
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3 align-self-center">
            <h3 class="titre text-center">mes albums</h3>
        </div>
        <div class="col-md-9 ">
            <div class="row">
                {% for album in albums %}
                    <div class="col-md-4 mb-5">
                        <a href="{{ path('album', {'id': album.id}) }}">
                            <img alt="{{ album.title }}" class="mini" src="{{ album.cover }}">
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}

{% use 'bootstrap_4_horizontal_layout.html.twig' %}

{% block _product_Album_images_widget %}

    <ul id='album-images-fields-list' data-prototype='{{ form_widget(prototype)|e }}'
        data-widget-tags='{{ '<li></li>'|e }}' data-widget-counter='{{ value|length }}'>
        {% for key,albumImageForm in formAlbum.children %}

        {{ form_widget(albumImageForm) }}

        {% endfor %}
    </ul>

<button type="button" class="add-another-collection-widget" data-list-selector="#album-images-fields-list">
    Ajouter une nouvelle image
</button>

{% endblock %}

{% block form_label_class %}
col-sm-2
{%- endblock form_label_class %}

{% block form_group_class -%}
col-sm-10
{%- endblock form_group_class %}
</head>

<body>

    {# Mise en place de la navbar au dessus du block body#}
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
        <a class="navbar-brand ml-2" href="{{ path('home')}}">
            <img alt="bulles" src="../img/logo-bulles.png">
        </a>
        <button aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation"
            class="navbar-toggler" data-target="#navbarColor03" data-toggle="collapse" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto col-md-10 offset-md-2 align-items-center">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('mesAlbums')}}" {% if app.request.attributes.get( '_route' ) in [
                        'mesAlbums',
                        'album',
                    ] %} id='active' {% endif %}>Albums</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('biographie')}}"
                        {% if app.request.attributes.get( '_route' ) == 'biographie' %} id='active'
                        {% endif %}>Biographie</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('allNews')}}" {% if app.request.attributes.get( '_route' ) in [
                        'allNews',
                        'allNewsOld',
                        'news',
                    ] %} id='active' {% endif %}>Agenda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('allMakingOf')}}" {% if app.request.attributes.get( '_route' ) in [
                        'allMakingOf',
                        'makingOf',
                    ] %} id='active' {% endif %}>Making-Of</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact')}}"
                        {% if app.request.attributes.get( '_route' ) == 'contact' %} id='active' {% endif %}>Contact</a>
                </li>

                {% for detail in details %}
                <li class="nav-item pl-5">
                    <a class="nav-link" href="{{ detail.facebook }}" target="_blank">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ detail.twitter }}" target="_blank">
                        <i class="fab fa-twitter"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ detail.instagram }}" target="_blank">
                        <i class="fab fa-instagram"></i>
                    </a>
                </li>
                {% endfor %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin')}}">
                        <i class="fas fa-user-circle"></i>
                    </a>
                </li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="nav-item">
                    <a class="nav-link" id="active" href="{{ path('app_logout')}}">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </li>
                {% endif %}

            </ul>
        </div>
    </nav>
    <div class="container">
        <main>
            {# body #}
            {% block body %}{% endblock %}
        </main>
    </div>

    <div class="container-fluid">
        <main>
            {# press #}
            {% block press %}{% endblock %}
        </main>

    </div>

    {# Footer #}
